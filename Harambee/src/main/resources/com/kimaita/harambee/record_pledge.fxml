<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1"
      spacing="15.0" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/25"
      fx:controller="com.kimaita.harambee.controllers.PledgeController">
    <padding>
        <Insets bottom="50.0" left="40.0" right="40.0" top="30.0"/>
    </padding>
    <children>
        <Label text="Pledge Donation" textFill="#2d3447">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>
        <Separator prefWidth="200.0"/>

        <!-- Section 1: Donor & Association -->
        <Label text="Donor Information">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>

        <GridPane hgap="10.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="130.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="Select Donor:"/>
                <ComboBox fx:id="cbDonor" prefWidth="300.0" promptText="Choose registered donor..."
                          GridPane.columnIndex="1"/>
                <Label text="Link to Request:" GridPane.rowIndex="1"/>
                <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <children>
                        <CheckBox fx:id="chkLinkRequest" mnemonicParsing="false" text="Yes"/>
                        <TextField fx:id="txtRequestID" disable="true" promptText="Enter Request ID"
                                   HBox.hgrow="ALWAYS"/>
                    </children>
                </HBox>
            </children>
        </GridPane>

        <Separator prefWidth="200.0"/>

        <!-- Section 2: Items -->
        <Label text="Items to Pledge">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>

        <!-- Add Item Form -->
        <HBox spacing="10.0" style="-fx-background-color: #f4f4f4; -fx-background-radius: 5;">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <children>
                <ComboBox fx:id="cbItem" prefWidth="250.0" promptText="Select Item..." HBox.hgrow="ALWAYS"/>
                <Button fx:id="btnCreateItem" mnemonicParsing="false" text="+"/>
                <TextField fx:id="txtQuantity" prefWidth="100.0" promptText="Qty"/>
                <Label fx:id="lblUnit" alignment="CENTER" prefWidth="50.0" style="-fx-padding: 5 0 0 0;" text="--"/>
                <Button fx:id="btnAddItem" mnemonicParsing="false" style="-fx-background-color: #2D3447;" text="Add"
                        textFill="WHITE"/>
            </children>
        </HBox>

        <TableView fx:id="tblItems" prefHeight="250.0" prefWidth="200.0">
            <columns>
                <TableColumn fx:id="colItemName" prefWidth="250.0" text="Item Description"/>
                <TableColumn fx:id="colQuantity" prefWidth="100.0" text="Quantity"/>
                <TableColumn fx:id="colUnit" prefWidth="100.0" text="Unit"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>

        <Separator prefWidth="200.0"/>

        <!-- Section 3: Delivery Logistics -->
        <Label text="Logistics">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>

        <VBox spacing="10.0">
            <children>
                <Label text="When will these items be delivered?"/>
                <HBox spacing="20.0">
                    <children>
                        <RadioButton fx:id="rbImmediate" mnemonicParsing="false" selected="true"
                                     text="Immediately (Today)">
                            <toggleGroup>
                                <ToggleGroup fx:id="deliveryDateGroup"/>
                            </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="rbSchedule" mnemonicParsing="false" text="Schedule for Future"
                                     toggleGroup="$deliveryDateGroup"/>
                    </children>
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Target Date:"/>
                        <DatePicker fx:id="dpDeliveryDate" disable="true" promptText="Select date"/>
                    </children>
                    <padding>
                        <Insets left="20.0"/>
                    </padding>
                </HBox>
            </children>
        </VBox>

        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <children>
                <Button fx:id="btnCancel" mnemonicParsing="false" prefWidth="80.0" text="Cancel"/>
                <Button fx:id="btnPledge" defaultButton="true" mnemonicParsing="false" prefWidth="150.0"
                        style="-fx-background-color: #2D3447;" text="Confirm Pledge" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                </Button>
            </children>
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </HBox>
    </children>
</VBox>