<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" spacing="15.0" style="-fx-background-color: transparent;"
      xmlns="http://javafx.com/javafx/17" fx:controller="com.kimaita.harambee.controllers.DeliveryController">
    <padding>
        <Insets bottom="30.0" left="40.0" right="40.0" top="30.0"/>
    </padding>
    <children>
        <Label text="Update Delivery Status" textFill="#2d3447">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>
        <Separator prefWidth="200.0"/>

        <Label text="Select Pledge">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>

        <HBox spacing="15.0" alignment="CENTER_LEFT">
            <children>
                <Label text="Pledge ID:"/>
                <ComboBox fx:id="cbPledgeSelect" prefWidth="300.0" promptText="Select a pending pledge..."/>
                <Button fx:id="btnLoadPledge" mnemonicParsing="false" text="Load Details"/>
            </children>
        </HBox>

        <GridPane hgap="5.0" style="-fx-background-color: #f4f4f4; -fx-background-radius: 5;" vgap="5.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="10.0" prefWidth="90.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="10.0" prefWidth="80.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="Donor:" textFill="#666666" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                </Label>
                <Label fx:id="lblDonorName" text="--" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Date:" textFill="#666666" GridPane.columnIndex="2" GridPane.rowIndex="0">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                </Label>
                <Label fx:id="lblPledgeDate" text="--" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                <Label text="Recipient:" textFill="#666666" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                </Label>
                <Label fx:id="lblRecipientName" text="--" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </GridPane>

        <Separator prefWidth="200.0"/>
        <Label text="Items in Manifest">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>

        <TableView fx:id="tblDeliveryItems" prefHeight="150.0" prefWidth="200.0">
            <columns>
                <TableColumn fx:id="colItemName" prefWidth="200.0" text="Item Description"/>
                <TableColumn fx:id="colQuantity" prefWidth="80.0" text="Qty"/>
                <TableColumn fx:id="colUnit" prefWidth="80.0" text="Unit"/>
                <TableColumn fx:id="colStatus" prefWidth="120.0" text="Item Status"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>

        <Separator prefWidth="200.0"/>
        <Label text="Delivery Updates">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>

        <GridPane hgap="10.0" vgap="15.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="130.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="Current Status:"/>
                <ComboBox fx:id="cbDeliveryStatus" prefWidth="250.0" promptText="Select Status"
                          GridPane.columnIndex="1"/>

                <Label text="Actual Delivery Date:" GridPane.rowIndex="1"/>
                <DatePicker fx:id="dpActualDeliveryDate" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Courier / Driver:" GridPane.rowIndex="2"/>
                <TextField fx:id="txtCourier" promptText="Name" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Notes:" GridPane.rowIndex="3" GridPane.valignment="TOP"/>
                <TextArea fx:id="txtRemarks" prefHeight="80.0" prefWidth="200.0" promptText="Remarks..." wrapText="true"
                          GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            </children>
        </GridPane>

        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <children>
                <Button fx:id="btnCancel" mnemonicParsing="false" prefWidth="80.0" text="Cancel"/>
                <Button fx:id="btnUpdate" defaultButton="true" mnemonicParsing="false" prefWidth="150.0"
                        style="-fx-background-color: #2D3447;" text="Update Delivery" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                </Button>
            </children>
        </HBox>
    </children>
</VBox>