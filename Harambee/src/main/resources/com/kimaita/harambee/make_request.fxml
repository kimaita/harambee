<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1"
       spacing="15.0" style="-fx-background-color: transparent;"
      xmlns="http://javafx.com/javafx/25" fx:controller="com.kimaita.harambee.controllers.RequestController">
    <padding>
        <Insets bottom="30.0" left="40.0" right="40.0" top="30.0"/>
    </padding>
    <children>
        <Label text="Record Request" textFill="#2d3447">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>
        <Separator prefWidth="200.0"/>

        <Label text="Recipient Information">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>

        <GridPane hgap="10.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="130.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="Select Recipient:"/>
                <ComboBox fx:id="cbRecipient" prefWidth="300.0" promptText="Choose registered recipient..."
                          GridPane.columnIndex="1"/>
            </children>
        </GridPane>

        <Separator prefWidth="200.0"/>
        <Label text="Items Needed">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>

        <!-- Add Item Form -->
        <HBox spacing="10.0" style="-fx-background-color: #f4f4f4; -fx-background-radius: 5;">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <children>
                <ComboBox fx:id="cbItem" prefWidth="250.0" promptText="Select Item..." HBox.hgrow="ALWAYS"/>
                <Button fx:id="btnCreateItem" mnemonicParsing="false" text="+"/>
                <TextField fx:id="txtQuantity" prefWidth="100.0" promptText="Qty"/>
                <Label fx:id="lblUnit" alignment="CENTER" prefWidth="50.0" text="--" style="-fx-padding: 5 0 0 0;"/>
                <Button fx:id="btnAddItem" mnemonicParsing="false" style="-fx-background-color: #2D3447;" text="Add"
                        textFill="WHITE"/>
            </children>
        </HBox>

        <TableView fx:id="tblItems" prefHeight="200.0" prefWidth="200.0">
            <columns>
                <TableColumn fx:id="colItemName" prefWidth="250.0" text="Item Description"/>
                <TableColumn fx:id="colQuantity" prefWidth="100.0" text="Quantity"/>
                <TableColumn fx:id="colUnit" prefWidth="100.0" text="Unit"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>

        <Separator prefWidth="200.0"/>
        <Label text="Request Logistics">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>

        <GridPane hgap="10.0" vgap="15.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="130.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="Description/Notes:" GridPane.valignment="TOP"/>
                <TextArea fx:id="txtNotes" prefHeight="80.0" prefWidth="200.0"
                          promptText="Briefly describe why these items are needed..." wrapText="true"
                          GridPane.columnIndex="1"/>

                <Label text="Deadline:" GridPane.rowIndex="1"/>
                <DatePicker fx:id="dpDeadline" promptText="Needed by..." GridPane.columnIndex="1"
                            GridPane.rowIndex="1"/>

                <Label text="Recurring Request:" GridPane.rowIndex="2"/>
                <CheckBox fx:id="chkRecurring" mnemonicParsing="false" text="Yes, this is a recurring need"
                          GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            </children>
        </GridPane>

        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <children>
                <Button fx:id="btnSubmit" defaultButton="true" mnemonicParsing="false" prefWidth="150.0"
                        style="-fx-background-color: #2D3447;" text="Submit Request" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                </Button>
            </children>
        </HBox>
    </children>
</VBox>